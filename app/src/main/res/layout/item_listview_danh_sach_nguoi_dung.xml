<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenTaiKhoanThemNguoiDung"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tên tài khoản" />

            <TextView
                android:id="@+id/tvHoVaTenThemNguoiDung"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Họ và tên" />

            <TextView
                android:id="@+id/tvMatKhauThemNguoiDung"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mật khẩu" />
            <TextView
                android:id="@+id/tvEmailThemNguoiDung"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email" />
            <TextView
                android:id="@+id/tvSoDienThoaiThemNguoiDung"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số điện thoại" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvNgaySinhThemNguoiDung"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ngày sinh" />
                <TextView
                    android:id="@+id/tvGioiTinhThemNguoiDung"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Giới tính" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvDiaChiThemNguoiDung"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Địa chỉ" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgEditNguoiDung"
            android:layout_width="1dp"
            android:layout_height="114dp"
            android:layout_weight="1"
            android:src="@drawable/edit" />

        <ImageView
            android:id="@+id/imgDeleteNguoiDung"
            android:layout_width="1dp"
            android:layout_height="114dp"
            android:layout_weight="1"
            android:src="@drawable/delete" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>