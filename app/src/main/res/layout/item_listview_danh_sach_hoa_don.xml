<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenSachTaoHoaDon"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tên sách" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMaHoaDonTaoHoaDon"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Mã" />

                <TextView
                    android:id="@+id/tvGiaSachTaoHoaDon"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Giá" />

                <TextView
                    android:id="@+id/tvSoLuongTaoHoaDon"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Số lượng" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNguoiMuaTaoHoaDon"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Người mua" />

                <TextView
                    android:id="@+id/tvNguoiTaoTaoHoaDon"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Người tạo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNgayTaoTaoHoaDon"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Ngày tạo" />
                <TextView
                    android:id="@+id/tvTongTienTaoHoaDon"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgEditHoaDon"
            android:layout_width="1dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:src="@drawable/edit" />

        <ImageView
            android:id="@+id/imgDeleteHoaDon"
            android:layout_width="1dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:src="@drawable/delete" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>